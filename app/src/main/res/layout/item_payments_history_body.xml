<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="20dp"
    >
<!--    header ( 작업 이름 )-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payments_history_body_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
    <TextView
        android:id="@+id/payments_history_body_item_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:textColor="@color/Medium"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="사하구 낙동5블럭 낙동강 온도 측정 센터 신축 공사"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    body-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payments_history_body_item_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/payments_history_body_item_header"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:id="@+id/payments_history_body_item_body_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:textColor="@color/High"
            android:fontFamily="@font/pretendard_bold"
            android:text="1월 23일 보통인부 지급내역서"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    footer ( 인원, 날짜 )-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payments_history_body_item_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/payments_history_body_item_body"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/payments_history_body_item_footer_worker_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="8dp"
            android:background="@color/Gray_50"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/Medium"
            android:text="보통인부 10명"
            />
        <TextView
            android:id="@+id/payments_history_body_item_footer_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:textColor="@color/Medium"
            android:text="2023.01.23"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>